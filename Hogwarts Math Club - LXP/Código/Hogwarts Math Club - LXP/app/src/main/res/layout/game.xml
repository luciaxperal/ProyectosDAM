<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/fondo_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textViewScore"
            style="@style/misTextos"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:background="@drawable/cuadrado"
            android:textSize="20dp" />

        <Space
            android:layout_width="43dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imageViewVidas"
            android:layout_width="84dp"
            android:layout_height="29dp" />

                <Space
                    android:layout_width="16dp"
                    android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewPlayer"
                style="@style/misTextos"
                android:layout_width="92dp"
                android:textSize="20dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/textViewNivel"
                style="@style/misTextos"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/level" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewNumeroUno"
            style="@style/misimgnums"/>

        <TextView
            android:id="@+id/textViewOperador"
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="40pt" />

        <ImageView
            android:id="@+id/imageViewNumeroDos"
            style="@style/misimgnums"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="311dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Space
                android:layout_width="203dp"
                android:layout_height="13dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewRespuesta"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                style="@style/misTextos"
                android:textColor="@color/colorPrimaryDark"
                android:hint="="
                android:gravity="center"
                android:textSize="40dp" />


            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="104dp"
                android:layout_height="84dp"
                android:background="@android:drawable/ic_input_delete" />

        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow>

                <Button
                    android:id="@+id/ButtonCero"
                    style="@style/misbotonesnum"
                    android:text="0" />

                <Button
                    android:id="@+id/ButtonUno"
                    style="@style/misbotonesnum"
                    android:text="1" />

                <Button
                    android:id="@+id/ButtonDos"
                    style="@style/misbotonesnum"
                    android:text="2" />

                <Button
                    android:id="@+id/ButtonTres"
                    style="@style/misbotonesnum"
                    android:text="3" />

                <Button
                    android:id="@+id/ButtonCuatro"
                    style="@style/misbotonesnum"
                    android:text="4" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/ButtonCinco"
                    style="@style/misbotonesnum"
                    android:text="5" />

                <Button
                    android:id="@+id/ButtonSeis"
                    style="@style/misbotonesnum"
                    android:text="6" />

                <Button
                    android:id="@+id/ButtonSiete"
                    style="@style/misbotonesnum"
                    android:text="7" />

                <Button
                    android:id="@+id/ButtonOcho"
                    style="@style/misbotonesnum"
                    android:text="8" />

                <Button
                    android:id="@+id/ButtonNueve"
                    style="@style/misbotonesnum"
                    android:text="9" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/buttonComprobar"
            style="@style/misTextos"
            android:layout_width="201dp"
            android:layout_height="47dp"
            android:layout_margin="20dp"
            android:background="@drawable/cuadrado"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:text="@string/check"></Button>

    </LinearLayout>
</LinearLayout>